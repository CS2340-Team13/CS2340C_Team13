<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/StartScreen">

    <fragment
        android:id="@+id/StartScreen"
        android:name="com.example.dungeonrunner.views.StartScreen"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start_screen">

        <action
            android:id="@+id/action_StartScreen_to_ConfigScreen"
            app:destination="@id/ConfigScreen" />

    </fragment>


    <fragment
        android:id="@+id/ConfigScreen"
        android:name="com.example.dungeonrunner.views.ConfigScreen"
        android:label="fragment_config"
        tools:layout="@layout/fragment_config_screen">

        <action
            android:id="@+id/action_ConfigScreen_to_Room1"
            app:destination="@id/Room1" />

    </fragment>


    <fragment
        android:id="@+id/EndScreen"
        android:name="com.example.dungeonrunner.views.EndScreen"
        android:label="fragment_end"
        tools:layout="@layout/fragment_game_screen">

        <action
            android:id="@+id/action_EndScreen_to_StartScreen"
            app:destination="@id/StartScreen" />

    </fragment>


    <fragment
        android:id="@+id/Room1"
        android:name="com.example.dungeonrunner.views.Room1"
        android:label="fragment_room1"
        tools:layout="@layout/fragment_room1">

        <action
            android:id="@+id/action_Room1_to_Room2"
            app:destination="@id/Room2" />

    </fragment>


    <fragment
        android:id="@+id/Room2"
        android:name="com.example.dungeonrunner.views.Room2"
        android:label="fragment_room2"
        tools:layout="@layout/fragment_room2">

        <action
            android:id="@+id/action_Room2_to_Room3"
            app:destination="@id/Room3" />
        <action
            android:id="@+id/action_Room2_to_Room1"
            app:destination="@id/Room1" />

    </fragment>


    <fragment
        android:id="@+id/Room3"
        android:name="com.example.dungeonrunner.views.Room3"
        android:label="fragment_room3"
        tools:layout="@layout/fragment_room3">

        <action
            android:id="@+id/action_Room3_to_EndScreen"
            app:destination="@id/EndScreen" />
        <action
            android:id="@+id/action_Room3_to_Room2"
            app:destination="@id/Room2" />

    </fragment>

</navigation>
